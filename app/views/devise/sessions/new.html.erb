<div class="login-page">
  <div class="form">
    <%= form_for(resource, as: resource_name, class: 'login-form', url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "username", autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "password", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'button' %>
      </div>
      <p class="message">Not registered? <a href="<%= new_user_registration_path %>">Create an account</a></p>
    <% end %>
  </div>
</div>
