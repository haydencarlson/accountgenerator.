<div class="service_container">
  <%= tabs do |c| %>
    <% @service_categories.each do |category| %>
      <% c.tab category.name do %>
        <div class="container">
          <% category.service_items.each do |item| %>
            <div class="service_item">
              <%= link_to new_service_path(:service_id => item.id) do %>
                <span> <%= item.name %> </span>
                <span> <%= item.price %> </span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
